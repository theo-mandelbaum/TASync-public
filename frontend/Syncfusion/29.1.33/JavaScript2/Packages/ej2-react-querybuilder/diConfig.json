{
    "name": "QueryBuilder",
    "description": "QueryBuilder Components",
    "blazorType": "native",
    "blazorDependency": [
        "ej2-base",
        "ej2-data",
        "ej2-popups",
        "ej2-popups/blazor/Tooltip",
        "ej2-splitbuttons/blazor/DropDownButton",
        "ej2-inputs/blazor/NumericTextBox,TextBox",
        "ej2-dropdowns/blazor/DropDownList",
        "ej2-calendars/blazor/DatePicker",
        "ej2-dropdowns/MultiSelect"
    ],
    "keywords": {
        "common": [
            "ej2", "Syncfusion", "query builder", "querybuilder", "query designer", "filter", "javascript query builder", "typescript query builder", "syncfusion query builder"
        ],
        "angular": [
            "angular", "ng", "ej2 ng query builder", "ng query builder", "angular query builder", "syncfusion angular query designer", "angular filter"
        ],
        "react": [
            "react", "reactjs", "syncfusion react query builder", "react query builder", "react query designer", "react filter"
        ],
        "vue": [
            "vue", "vuejs", "vue es5", "syncfusion vue query builder", "vue query builder", "vue query designer", "vue filter"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/syncfusion/ej2-angular-ui-components"
    },
    "eventInterfaces": ["ChangeEventArgs", "RuleChangeEventArgs"],
    "statelessTemplateProps": ["headerTemplate"],
    "components": [
        {
            "baseClass": "QueryBuilder",
            "directoryName": "query-builder",
            "type": "simple",
            "contentSelect": "div",
            "twoWays": [],
            "defaultTag": "<div id='ej2QueryBuilder'></div>",
            "blazorPlaceholder": "querybuilder",
            "comment": [
                "/**",
                " * Represents the EJ2 Angular QueryBuilder Component.",
                " * ```html",
                " * <ejs-querybuilder></ejs-querybuilder>",
                " * ```",
                " */"
            ],
            "reactComment": [
                "/**",
                " * Represents the React QueryBuilder Component",
                " * ```html",
                " * <QueryBuilderComponent></QueryBuilderComponent>",
                " * ```",
                " */"
            ],
            "vueComment": [
                "/**",
                " * Represents the VueJS QueryBuilder Component.",
                " * ```html",
                " * <ejs-querybuilder></ejs-querybuilder>",
                " * ```",
                " */"
            ],
            "complexDirective": [
                {
                    "baseClass": "Rule",
                    "propertyName": "rule"
                },
                {
                    "baseClass": "ShowButtons",
                    "propertyName": "showButtons"
                }
            ],
            "templateProperties": [
                "headerTemplate"
            ],
            "dynamicModules": [
                "QueryLibrary"
            ],
            "tagDirective": [
                {
                    "arrayDirectiveClassName": "columns",
                    "directiveClassName": "column",
                    "propertyName": "columns",
                    "arrayDirectiveSelector": "ejs-querybuilder>e-columns",
                    "directiveSelector": "ejs-querybuilder>e-columns>e-column",
                    "directoryName": "query-builder",
                    "baseClass": "Columns",
                    "comment": [
                        "/**",
                        " * `e-column` directive represent a column of the Angular QueryBuilder. ",
                        " * It must be contained in a QueryBuilder component(`ejs-querybuilder`). ",
                        " * ```html",
                        " * <ejs-querybuilder [dataSource]='data'> ",
                        " *   <e-columns>",
                        " *    <e-column field='ID' label='ID' type='number'></e-column>",
                        " *    <e-column field='Date' label='Date' type='date' format='dd/MM/yyyy'></e-column>",
                        " *   </e-columns>",
                        " * </ejs-querybuilder>",
                        " * ```",
                        " */"
                    ],
                    "reactComment": [
                        "/**",
                        " * `ColumnDirective` represent a column of the react QueryBuilder. ",
                        " * It must be contained in a QueryBuilder component(`GridComponent`). ",
                        " * ```tsx",
                        " * <QueryBuilderComponent dataSource={data}> ",
                        " *   <ColumnsDirective>",
                        " *     <ColumnDirective field='ID' label='ID' type='number'></ColumnDirective>",
                        " *     <ColumnDirective field='Date' label='Date' type='date' format='dd/MM/yyyy'></ColumnDirective>",
                        " *   <ColumnsDirective>",
                        " * </QueryBuilderComponent>",
                        " * ```",
                        " */"
                    ],
                    "vueComment": [
                        "/**",
                        " * `e-column` directive represent a column of the VueJS QueryBuilder. ",
                        " * It must be contained in a QueryBuilder component(`ejs-querybuilder`). ",
                        " * ```vue",
                        " * <ejs-querybuilder :dataSource='data'> ",
                        " *   <e-columns>",
                        " *    <e-column field='ID' label='ID' type='number'/>",
                        " *    <e-column field='Date' label='Date' type='date' format='dd/MM/yyyy'/>",
                        " *   </e-columns>",
                        " * </ejs-querybuilder>",
                        " * ```",
                        " */"
                    ],
                    "blazorTemplates":[
                        "template"
                    ],
                    "templateProperties": [
                        "ruleTemplate",
                        "template"
                    ]
                }
            ]
        }
    ]
}
