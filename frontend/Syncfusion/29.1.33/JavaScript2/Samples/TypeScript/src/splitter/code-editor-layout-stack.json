{"index.html":"<html><head><link href=\"https://cdn.syncfusion.com/ej2/28.1.33/{{theme}}.css\" rel=\"stylesheet\">\n\n    <link href=\"https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css\" rel=\"stylesheet\">\n\n    <style>\n            body{\n                touch-action:none;\n            }\n            .control-section{\n                margin-top:100px;\n            }\n        </style></head><body><div class=\"stackblitz-container {{theme}}\">\n\n<div id=\"target\" class=\"control-section\">\n        <div id=\"splitter2\"> \n            <div id=\"splitter1\">\n                    <div>\n                        <div class=\"code-editor-content\">\n                            <label class=\"h3\">HTML</label>\n                            <div class=\"code-preview\">                        \n                                &lt;<span>!DOCTYPE html&gt;</span>\n                                <div>&lt;<span>html&gt;</span></div>\n                                <div>&lt;<span>body&gt;</span></div>\n                                &lt;<span>div</span> id=\"custom-image\"&gt;\n                                <div style=\"margin-left: 5px\">&lt;<span>img</span> src=\"//npmci.syncfusion.com/development/demos/src/albert.png\" alt=\"albert\"&gt;</div>\n                                <div>&lt;<span>div</span>&gt;</div>\n                                <div>&lt;<span>/body&gt;</span></div>\n                                <div>&lt;<span>/html&gt;</span></div>\n                            </div>\n                        </div>\n                    </div>\n                <div>\n                    <div class=\"code-editor-content\">\n                        <label class=\"h3\">CSS</label>\n                        <div class=\"code-preview\">\n                            <span>img {</span>\n                                <div id=\"code-text\">margin:<span>0 auto;</span></div>\n                                <div id=\"code-text\">display:<span>flex;</span></div> \n                                <div id=\"code-text\">height:<span>70px;</span></div>\n                            <span>   }</span>\n                        </div>\n                    </div>\n                </div>\n                <div>\n                    <div class=\"code-editor-content\">\n                        <label class=\"h3\">JavaScript</label>\n                        <div class=\"code-preview\">\n                            <span>var</span> image = document.getElementById(\"custom-image\");\n                            <div>image.addEventListener(\"click\", function() {</div>\n                                <div style=\"padding-left: 20px;\">// Code block for click action</div>\n                            <span> }</span>\n                        </div>\n                    </div>\n                </div>\n            </div>\n            <div class=\"code-editor-content\">\n                <label class=\"h3\">Preview of sample</label>\n                <div class=\"splitter-image\">\n                    <img class=\"img1\" src=\"https://ej2.syncfusion.com/demos/src/listview/images/albert.png\" style=\"width: 20%;margin: 0 auto;\">\n                </div>\n            </div>\n        </div>\n    </div>    \n    \n    \n    \n    <style>\n        #code-text {\n            margin-left: 5px;\n        }\n        .code-editor-content .code-preview {\n            margin-top: 15px;\n            font-size: 12px;\n        }\n    \n        .code-editor-content .h3 {\n            font-size: 14px;\n            margin: 4px;\n            font-weight: bold;\n        }\n\n        .code-editor-content {\n            padding: 12px;\n        }\n        .splitter-image {\n            margin: 0 auto;\n            display: flex;\n            height: 115px;\n            margin-top: 10px;\n        }\n    </style>\n    \n        \n</div></body></html>","package.json":"{\n  \"@syncfusion/ej2-base\": \"*\",\n  \"markdown-spellcheck\": \"^1.3.1\",\n  \"@syncfusion/ej2-layouts\": \"*\",\n  \"@types/crossroads\": \"0.0.28\",\n  \"@types/signals\": \"0.0.16\",\n  \"@types/moment-timezone\": \"^0.5.3\",\n  \"@types/hasher\": \"0.0.27\",\n  \"fuse.js\": \"^3.2.0\",\n  \"marked\": \"5.1.2\",\n  \"codemirror\": \"^5.37.0\",\n  \"crossroads\": \"^0.12.2\",\n  \"@types/marked\": \"5.0.1\",\n  \"@types/codemirror\": \"0.0.56\",\n  \"@types/es6-promise\": \"0.0.28\",\n  \"hasher\": \"^1.2.0\",\n  \"moment-timezone\": \"^0.5.14\"\n}","index.ts":"{{ripple}}\nimport { Splitter } from '@syncfusion/ej2-layouts';\n/**\n *  Sample for code editor layout\n */\n\n    \n    let splitObj1: Splitter = new Splitter({\n        height: '220px',\n        paneSettings: [\n            { size: '29%', min: '23%' },\n            { size: '20%', min: '15%' },\n            { size: '35%', min: '35%' }\n        ],\n        width: '100%'\n    });\n    splitObj1.appendTo('#splitter1');\n    let splitObj2: Splitter = new Splitter({\n        height: '400px',\n        paneSettings: [\n            { size: '53%', min: '30%' },\n        ],\n        orientation: 'Vertical'\n    });\n    splitObj2.appendTo('#splitter2');\n\n"}